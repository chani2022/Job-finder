<img src="{{ email.image('@images/logo.jpg') }}" alt="Logo">


<h1>Welcome
	{{ user.nom }}!</h1>

<p>
	You signed up as
	{{ user.username }}
	the following email:
</p>
<p>
	<code>{{ email.to[0].address }}</code>
</p>

<p>
	<a href="{{ absolute_url (path ('app_active_status', {id: user.id} )) }}">Activate your account</a>
	(this link is valid until
	{{ expiration_date }})
</p>
